	  </Page>
	</ItemGroup>
	<ItemGroup>
	  <Page Update="ModalModifierEmploye.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </Page>
	</ItemGroup>
	<ItemGroup>
